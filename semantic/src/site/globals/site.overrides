//}

/* Contextual Backgrounds */

.background-green {
  background-color: @green;
}

.background-blue {
  background-color: #253c44;
}

.background-grey {
  background-color: #edeff1;
}

/* Contextual Colors */

.text-green {
  color: #4bc251 !important;
}

.text-blue {
  color: #253c44 !important;
}

.text-grey {
  color: #edeff1 !important;
}

.text-white {
  color: #fff !important;
}

/* Contextual Sizes */

.text-huge {
  font-size: 6em;
  line-height: initial;
}

.text-large {
  font-size: 4em;
  line-height: initial;
}

.text-medium {
  font-size: 2em;
  line-height: initial;
}

@media (max-height: 767px) {
  .text-medium {
    font-size: 1.4em;
  }
}

/* Contextual Font Weights */

.text-heavy {
  font-weight: 600;
}

.text-light {
  font-weight: 200;
}

/* Text Alignment */

@media (max-width: 767px) {
  .center-mobile {
    text-align: center !important;
  }
}

/* Misc */

.map-background {
  background-image: url("../img/Map.png");
  background-repeat: repeat-y;
  background-position: center center;
  width: 100%;
}

.map-background h1 {
  font-size: 32pt;
  padding: 50px 0;
}

@media (max-width: 991px) {
  .map-background h1 {
    font-size: 28pt;
  }
}

blockquote {
  font-weight: 300;
}

/* Logo */

.logo img {
  max-height: 40px;
}

/* Screens */

.screen img {
  width: 100%;
  max-width: 550px;
}

/* Mobile Menu */

#mobile-menu .item {
  padding-left: 15px;
  padding-right: 15px;
}

/* Buttons */

#get-started,
#get-started-foot {
  padding: 20px 50px;
  text-transform: uppercase;
  font-size: 1.2rem;
}

/* Footer */

.footer-menu {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

.footer-menu a {
  color: #fff;
}

nav > a {
  padding: 0 15px;
}

.column {
  padding-top: 25px;
  padding-bottom: 25px;
}

#slider .slick-slide img {
  display: inline;
}

#slider ul.slick-dots {
  text-align: center;
}

#slider ul.slick-dots li {
  display: inline;
  position: relative;
  left: -30px;
  cursor: pointer;
}

#slider ul.slick-dots li button {
  visibility: hidden;
}

#slider ul.slick-dots li:after {
  content: "\25e6";
  font-size: 3em;
}

#slider ul.slick-dots li.slick-active:after {
  content: "\2022";
}

#main-head {
  font-weight: 200;
}

body > .section:first-of-type {
  margin-top: -40px;
}

.section {
  padding-top: 50px;
  padding-bottom: 50px;
}