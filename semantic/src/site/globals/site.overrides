div.screen p {
    font-size: 16px;
    color: #666;
    font-weight: 400;
}

#feature_subtitle {
    font-size: 16px;
    color: #666;
    font-weight: 400;

}

img.shipping-logo, img.payment-logo {
  margin-right: 20px;
}

.as-seen-logo {
  margin-right: 20px;
  margin-bottom: 25px;
}

img.ui.image {
  display: inline-block !important;
}

@media only screen and (max-width: 767px) {
  .ui.container {
    width: auto;
    margin-left: 0 !important;
    margin-right: 0 !important;
  }
}

@media only screen and (min-width: 320px) and (max-width: 767px) {
  #features {
    text-align: center;
  }
}

#features .column {
  margin-bottom: calc(6 * 0.25em);
}

@media only screen and (max-width: 991px) {
  img.shipping-logo, img.payment-logo {
    margin-top: 30px;
  }
}